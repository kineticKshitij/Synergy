# Docker Environment Configuration for SynergyOS
# Copy this file to .env and update the values

# Django Settings
SECRET_KEY=django-insecure-CHANGE-THIS-TO-RANDOM-SECRET-KEY-IN-PRODUCTION
DEBUG=False
FORCE_SSL=True
# Replace 172.16.20.99 with your LAN IP if exposing the app to other devices
ALLOWED_HOSTS=localhost,127.0.0.1,backend,nginx,172.16.20.99

# Database
DB_PASSWORD=synergyos_pass_2024

# Security
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:80
CSRF_TRUSTED_ORIGINS=http://localhost,http://localhost:3000,http://localhost:80,http://172.16.20.99

# JWT Settings (in minutes)
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# Email Settings (Production SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=synergyos.noreply@gmail.com
EMAIL_HOST_PASSWORD=CHANGE_ME_TO_APP_PASSWORD
DEFAULT_FROM_EMAIL="SynergyOS Notifications <synergyos.noreply@gmail.com>"

# AI Settings (Google Gemini)
# Get your key at: https://makersuite.google.com/app/apikey
# Leave empty to disable AI features
GEMINI_API_KEY=

# Redis and Celery Settings
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

